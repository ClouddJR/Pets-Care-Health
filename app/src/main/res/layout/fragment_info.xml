<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.clouddroid.pettypetscarehealth.fragments.InfoFragment">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="165dp"
      android:layout_margin="16dp"
      app:cardCornerRadius="5dp">

      <ImageView
        android:id="@+id/petImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/paw"/>

    </android.support.v7.widget.CardView>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">


      <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="0.5"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="5dp">

        <GridLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:columnCount="2"
          android:rowCount="4">

          <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:text="General"
            android:textSize="18sp"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="name: "/>

          <TextView
            android:id="@+id/petNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_column="1"
            android:layout_row="1"
            android:text="Jazon"
            android:textSize="15sp"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="date: "/>

          <TextView
            android:id="@+id/petDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_column="1"
            android:layout_row="2"
            android:text="2016-5-16"
            android:textSize="15sp"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_column="0"
            android:layout_row="3"
            android:text="type: "/>

          <TextView
            android:id="@+id/petTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_column="1"
            android:layout_row="3"
            android:text="dog"
            android:textSize="15sp"/>

        </GridLayout>


      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="0.5"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="5dp">

        <GridLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:columnCount="2"
          android:rowCount="4">

          <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:text="Other"
            android:textSize="18sp"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="breed: "/>

          <TextView
            android:id="@+id/petBreedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_column="1"
            android:layout_row="1"
            android:text="German Shepherd"
            android:textSize="15sp"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="color: "/>

          <TextView
            android:id="@+id/petColorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_column="1"
            android:layout_row="2"
            android:text="brown"
            android:textSize="15sp"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_column="0"
            android:layout_row="3"
            android:text="gender: "/>

          <TextView
            android:id="@+id/petGenderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_column="1"
            android:layout_row="3"
            android:text="male"
            android:textSize="15sp"/>

        </GridLayout>

      </android.support.v7.widget.CardView>

    </LinearLayout>


    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_margin="16dp">

      <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/heightChar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp">

      <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/weightChar"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    </android.support.v7.widget.CardView>


  </LinearLayout>

</ScrollView>